<div class="row">
    <div class="col-12">
        <div class="card news-card-container">
            <div class="row news-card-item">
                <div id="collapsed-text-container" class="col-11 text-center">
                    <h5 style="display:none" id="news-wizard-collapsed-title">Earthquake Wizard</h5>
                </div>

                <div id="news-collapse-expand" class="col-1 text-right tmpst-clickable">
                    <i id="news-wizard-arrow-up" class="fas fa-caret-up fa-2x"></i>
                    <i style="display:none" id="news-wizard-arrow-down" class="fas fa-caret-down fa-2x"></i>
                </div>
            </div>

            <div id="news-wizard-container">
                <div class="row news-card-item">
                    <div class="col-12 text-center">
                        <h5>News Wizard</h5>
                    </div>
                </div>
                <div class="row news-card-item">
                    <div class="col-6">
                        <select class="form-control" id="occurence-type-select">
                            <option value="hourly">Hourly</option>
                            <option value="daily">Daily</option>
                            <option value="weekly">Weekly</option>
                            <option value="monthly">Monthly</option>
                        </select>
                    </div>
                    <div class="col-6">
                        <select class="form-control" id="hourly-type-select">
                            <option value="hourly">Hourly</option>
                            <option value="daily">Daily</option>
                            <option value="weekly">Weekly</option>
                            <option value="monthly">Monthly</option>
                        </select>
                    </div>
                </div>

                

                <div id="submit-news-request-container">
                    <div class="row">
                        <div class="col-12">
                            <button id="submit-news-request-btn" onclick="submitEarthquakeRequest()" class="btn btn-success w-100">Submit</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
