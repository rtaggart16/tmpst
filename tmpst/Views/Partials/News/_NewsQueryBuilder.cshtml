                        </select>
                    </div>
                    <div class="col-6">
                        <select class="form-control tmpst-clickable" id="news-category-input" data-toggle="tooltip" data-placement="top" title="Select the news category you want to see">
                            <option value="" disabled selected>Select Category</option>
                            <option value="business">Business</option>
                            <option value="entertainment">Entertainment</option>
                            <option value="general">General</option>
                            <option value="health">Health</option>
                            <option value="science">Science</option>
                            <option value="sports">Sports</option>
                            <option value="technology">Technology</option>
                        </select>
                    </div>
                </div>



                <div id="submit-news-request-container">
                    <div class="row">
                        <div class="col-12 first">
                            <button id="submit-news-request-btn" onclick="submitNewsRequest('@Model.App_Key')" class="btn btn-success w-100 tmpst-clickable" data-toggle="tooltip" data-placement="top" title="Submit news request">Submit</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
