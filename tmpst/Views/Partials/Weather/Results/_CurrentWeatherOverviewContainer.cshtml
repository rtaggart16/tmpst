<div class="card weather-card-container">
    <div class="row weather-card-item">

        <div id="collapsed-text-container" class="col-11 text-center">
            <h5 style="display:none" id="current-weather-wizard-collapsed-title">Current Weather</h5>
        </div>

        <div id="current-weather-collapse-expand" class="col-1 text-right tmpst-clickable">
            <i id="current-weather-wizard-arrow-up" class="fas fa-caret-up fa-2x"></i>
            <i style="display:none" id="current-weather-wizard-arrow-down" class="fas fa-caret-down fa-2x"></i>
        </div>
    </div>

    <div id="current-weather-wizard-container">


        @*Div that contains the current weather icon*@
        <div class="row weather-card-item text-center">
            <div id="current-weather-icon-container" class="col-12">

            </div>
        </div>
        <div class="row weather-card-item">
            @*Div that contains the current condition*@
            <div id="current-weather-condition-container" class="col-12">

            </div>
        </div>
        <div class="row weather-card-item">
            @*Div that contains the current temperature*@
            <div id="current-weather-temp-container" class="col-12">

            </div>
        </div>
        <div class="row weather-card-item">
            @*Div that contains the current feels like temperature*@
            <div id="current-weather-feel-temp-container" class="col-12">

            </div>
        </div>
        <hr />
        <div class="row weather-card-item">
            @*Div that contains the current wind direction*@
            <div id="current-weather-wind-dir-container" class="col-12">

            </div>
        </div>
        <div class="row weather-card-item">
            @*Div that contains the current wind speed*@
            <div id="current-weather-wind-speed-container" class="col-12">

            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <button class="btn btn-success w-100" onclick="analyseCurrentDayData()">Analyse Data</button>
            </div>
        </div>
    </div>
    </div>

<script>
    $('#current-weather-collapse-expand').click(function () {
        $('#current-weather-wizard-container').slideToggle("slow", function () {

            //if container is visible, show an arrow that allows the container to be minimised
            if (!$('#current-weather-wizard-container').is(':visible')) {
                $('#current-weather-wizard-arrow-up').fadeOut().promise().done(function () {
                    $('#current-weather-wizard-arrow-down').fadeIn();
                    $('#current-weather-wizard-collapsed-title').fadeIn();
                });
            }
            else {
                $('#current-weather-wizard-arrow-down').fadeOut().promise().done(function () {
                    $('#current-weather-wizard-arrow-up').fadeIn();
                    $('#current-weather-wizard-collapsed-title').fadeOut();
                });
            }
        });
    });
</script>